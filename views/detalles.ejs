<% include partials/head %>






<div class="container">
	<div class="page-header">
  		<h1><%= post.titulo %> <small><%= post.autor %></small></h1>
	</div>
	<div class="row">
		<div class="col-md-12">
				
			<img src="/img/bigs/<%= post.imagen %>">
			<p><%= post.contenido %></p>

	</div>
		<a class="btn btn-info btn-sm" href="/"><i class="glyphicon glyphicon-repeat"></i>Volver</a>
	</div>

	</div>

	<div class="col-md-12">
		<div class="row">
			<div class="card">
				<div class="card-body">
					<h2>Comentarios</h2>
					<div class="col-md-4">
					<form action="/save-comment/<%= post._id %>" method="post" class="form-group">
						<label for="name">Nombre: </label>
						<input name="name" type="text" placeholder="Tu nombre" class="form-control">
						<textarea name="text" placeholder="Escribir comentario" class="form-control" cols="30" rows="3"></textarea>
						<button type="submit" class="btn btn-success">Comentar</button>
					</form>
				</div>
				</div>
			</div>
		</div>

		<% for(let comment of comments) {%>
			<div class="card">
					<div class="card-header">
					  <%= comment.nombre %>
					</div>
					<div class="card-body">
					  <p class="card-text"><%= comment.contenido %></p>
					  <a href="/delete/<%= comment._id %>" class="btn btn-danger">Eliminar</a>
					</div>
			</div>
		<% } %>


	</div>

<% include partials/footer %>